a(href='/').brand Hardboiled
.nav-collapse
  - if (everyauth.loggedIn)
    ul.nav
      li.active
        a(href='/dashboard') Dashboard
    ul.nav.pull-right
      li
        p.navbar-text Logged in as 
          - if (everyauth.twitter)
            ='@'+everyauth.twitter.user.screen_name
          - else if (everyauth.user.email)
            = everyauth.user.email
          - else if (everyauth.user.name)
            = everyauth.user.name
      li
        a(href='/logout') Logout
  - else
    ul.nav
      li.active
        a(href='/') Home
      li
        a(href='/demo') Demo
    ul.nav.pull-right
      li
        a(href='#') Login